        ## version 3.1.0
        # scale_y_continuous(labels=percent)

    
    
    scatter <- ggplot(chilena, aes(civic, dictadura, colour = factor(univ)))
      scatter + geom_smooth(method = "lm", alpha = 0.1) + 
      facet_wrap(~ study) +
      labs(x = "Conocimiento cívico", y = "Apoyo a dictaduras", colour= "Nivel educacional de la familia") 
      
      
    #scatter <- ggplot(chilena, aes(is3g10a, dictadura))
